<Window x:Class="RentACar.View.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="False"
        WindowStyle="None"
        Background="Transparent"
        Foreground="{DynamicResource TextPrimaryBrush}"
        AllowsTransparency="True"
       >
    <Window.Resources>
        <Style x:Key="MessageBoxButton" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="15,8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="30" Background="{DynamicResource BackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" >
    
    <Border CornerRadius="8" Padding="20">
        <Grid Width="400">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title and Icon -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image x:Name="IconImage" 
                       Width="44"
                       Height="44"
                       Margin="0,0,10,0"/>

                <TextBlock Grid.Column="1" 
                           x:Name="TitleTextBlock"
                           VerticalAlignment="Center"
                           Text="Title" 
                           FontSize="18" 
                           FontWeight="Bold"/>
            </Grid>

            <!-- Message -->
            <TextBlock Grid.Row="1" 
                       x:Name="MessageTextBlock"
                       Text="Message" 
                       TextWrapping="Wrap" 
                       Margin="0,0,0,20"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button x:Name="OkButton" 
                        Content="{DynamicResource Ok}" 
                        Click="OkButton_Click"
                        Style="{StaticResource MessageBoxButton}"
                        Background="#007bff"/>

                <Button x:Name="CancelButton" 
                        Content="{DynamicResource Cancel}" 
                        Click="CancelButton_Click"
                        Style="{StaticResource MessageBoxButton}"
                        Background="#6c757d"
                        Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Border>
    </Border>
</Window>